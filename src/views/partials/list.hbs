{{#if adventures.length}}
    <ul class="adventure">
        {{#each adventures}}
            <li class="adventure-item">
                <a class="adventure-item-img" href="/adventures/start/{{ id }}">
                    <img src="{{ img }}">
                </a>
                <a class="adventure-item-title" href="/adventures/start/{{ id }}">
                    {{ title }}
                </a>
                <span class="adventure-item-content">
                    {{content}}
                </span>
            {{#if hashtags.length}}
                <ul class="hashtags">
                {{#each hashtags}}
                    <li class="hashtags-item">
                        <a href="/adventures/{{ link }}">
                            #{{ title }}
                        </a>
                    </li>
                {{/each}}
                </ul>
            {{/if}}
            </li>
        {{/each}}
    </ul>
{{^}}
{{/if}}
